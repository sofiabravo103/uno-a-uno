<%= render 'layouts/nav_bar' %>
<div class="container">
  </br>
  <div class="row">
    <div class="col-md-6 col-xs-12">
      <h1 class="text-center bigger">Grupo</br>Uno a Uno</h1>
      </br></br>
      <%= image_tag("coaching.png", id: 'logo', class: 'text-center img-responsive')%>
      </br></br>
    </div>
    <div class="col-md-6 col-xs-12 ">
      <div class="jumbotron">
        <h3 class="text-center">¿Cómo le podemos ayudar?</h3></br>
        <% if @error %>
         <div class="alert alert-danger" role="alert">
            <button class="close" data-dismiss="alert"></button>
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <span class="sr-only">Error:</span>
            <span class="font-bold">Para poder contestarle necesitamos que coloque su teléfono o correo electrónico.</span>
          </div>
        <% end %>
        <%= form_tag(help_path, method: :post) do %>
          <div class="form-group">
            <div class="row">
              <div class="col-md-12">
                <%= text_area_tag(:message, '', rows: "5", class:"form-control", placeholder: "Estoy teniendo problemas con ...") %>
              </div>
            </div>
            </br>
            <div class="row">
              <div class="col-md-6 col-xs-12">
                <%= email_field(:email, '', class:"form-control", placeholder: "Email") %>
              </div>
              <div class="col-md-6 col-xs-12">
                 <%= telephone_field(:phone, '', class:"form-control", placeholder: "Teléfono") %>
              </div>
            </div>
            </br>
            <div class="row">
              <div class="text-center col-md-12">
               <%= submit_tag("Solicitar información", class:"btn btn-primary") %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="jumbotron">
    <h2 class="text-center">Centro de atención para el niño, el adolescente, el adulto y la familia</h2>
    <h3 class="text-center">Psicología - Psiquiatría - Neurodesarrollo - Psicopedagogía -</br>Terapia Ocupacional - Terapia de Lenguaje - Cardiología</h3>
  </div>
</div>
<%= render 'layouts/footer' %>
